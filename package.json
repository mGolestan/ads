{
  "name": "ads-crawler",
  "version": "0.0.1",
  "description": "Scrape the ads.",
  "main": "server.js",
  "author": "Mohsen",
  "scripts": {
    "build": "yarn rimraf dist && yarn build:copy-sources && babel ./src --out-dir ./dist --ignore '**/*.spec.js'",
    "build:copy-sources": "flow-copy-source -v -i '**/*.spec.js' src dist",
    "start": "yarn build && node dist/index.js",
    "start:dev": "nodemon --exec babel-node -- src/index.js",
    "flow": "flow",
    "test": "yarn run flow && yarn jest src test --runInBand"
  },
  "pre-commit": [
    "test"
  ],
  "standard": {
    "plugins": [
      "flowtype"
    ]
  },
  "jest": {
    "setupFiles": [
      "./test/setupTests.js"
    ],
    "testEnvironment": "node"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mGolestan/ads"
  },
  "dependencies": {
    "async-middleware": "^1.2.1",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.2.5",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-flow": "^6.23.0",
    "babel-register": "^6.26.0",
    "body-parser": "^1.18.3",
    "cheerio": "1.0.0-rc.2",
    "compression": "^1.7.2",
    "cors": "^2.8.4",
    "dotenv": "^6.0.0",
    "express": "4.16.3",
    "flow-copy-source": "1.2.1",
    "helmet": "^3.12.1",
    "node-fetch": "^2.1.2",
    "request": "2.87.0",
    "rimraf": "^2.6.2",
    "urlencode": "^1.1.0",
    "winston": "^2.4.0"
  },
  "devDependencies": {
    "flow-bin": "^0.72.0",
    "jest": "^23.3.0",
    "pre-commit": "^1.2.2",
    "supertest": "^3.1.0"
  }
}
